{{ define "header" }}
  <mj-section background-color="#000000">
    <mj-column padding="0">
      <mj-text align="center" color="#c0c0c0" padding="0" font-size="24px" font-weight="bold">
        {{ $parts := split . "|" }}

        {{ if gt (len $parts) 1 }}
          <a style="color: #c0c0c0; text-decoration: none;" href="{{ index $parts 1 }}" rel="noreferrer noopener">{{ index $parts 0 }}</a>
        {{ else }}
          {{ . }}
        {{ end }}
      </mj-text>
    </mj-column>
  </mj-section>
{{ end }}
